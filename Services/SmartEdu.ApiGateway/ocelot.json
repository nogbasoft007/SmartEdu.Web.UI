{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/students",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7294 // Replace with the actual port where your school.api is running
        }
      ],
      "UpstreamPathTemplate": "/api/students",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/students/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7294 // Replace with the actual port where your school.api is running
        }
      ],
      "UpstreamPathTemplate": "/api/students/{everything}",
      "UpstreamHttpMethod": [ "GET", "PUT", "DELETE" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7123" // Your API Gateway base URL
  }
}
